.ui-palette
  display: inline-block;
  &__buttons
    display: flex
    justify-content: center
    align-items: center
    margin-bottom: 5px;
    padding: 0 15px;
    height: 41px;
    width: 180px;
    background: #FF9D0A;
    border: 3px solid #000000;
    & span
      margin-right: 14px
      font-size: 18px
    & button
      height: 25px;
      width: 25px;
      border none
      justify-content center
      align-items center
      outline none
      cursor: pointer
  &__colors
    display: flex;
    padding: 10px 8px;
    background-color: #FF9D0A
    border: 3px solid #000000
  &__color
    border: 1px solid #DFDFDF
    box-sizing: border-box
    width: 20px
    height: 20px
    margin-right: 4px;
  &__prev
    margin-right: 10px;


