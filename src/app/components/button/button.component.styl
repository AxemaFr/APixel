.ui-button
  button
    display: flex
    font-family IBM Plex Sans
    font-style normal
    font-weight 500
    border none
    justify-content center
    align-items center
    outline none
    font-size: 30px
    height: 25px
    width: 25px
    padding: 3px;
    margin: 0;

    &.primary
      background #DFDFDF

      &:active
        background #222321
        /deep/ svg
          fill: white

      &.disabled
        background #222321
        pointer-events none
